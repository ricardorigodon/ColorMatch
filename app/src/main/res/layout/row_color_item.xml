<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp">

    <View
        android:id="@+id/row_color_item_preview"
        android:layout_width="@dimen/row_color_item_preview_size"
        android:layout_height="@dimen/row_color_item_preview_size"
        android:layout_margin="16dp"
        android:background="@drawable/oval_white" />

    <TextView
        android:id="@+id/row_color_item_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@+id/row_color_item_preview"
        android:layout_toRightOf="@+id/row_color_item_preview"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/abc_primary_text_material_light"
        tools:text="#FF4455" />

</RelativeLayout>